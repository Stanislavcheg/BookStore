- reviews.each do |review|
  .general-message-wrap.divider-lg
    .clearfix
      - if review.user.image
        %img.img-circle.logo-size.inlide-block.pull-left{src: "#{review.user.image}"}
      - else
        %span.img-circle.logo-size.inlide-block.pull-left.logo-empty= review.title[0]
      .ml-70
        %div
          .general-message-date.hidden-xs= review.date
          .max-240
            - if review.verified?
              .general-message-verified Verified Reviewer
            .general-message-name= review.title
        .mb-15
          - review.rating.times do
            %i.fa.fa-star.rate-star
          - (5 - review.rating).times do
            %i.fa.fa-star.rate-star.rate-empty
        %p= review.description