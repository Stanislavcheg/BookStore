- books.each_slice(4) do |books_row|
  .row.mb-25
    - books_row.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            %img.img-shadow.general-thumbnail-img{src: book.images.first.try(:url), alt: book.name}
            .thumb-hover
              .general-thumb-link-wrap
                = link_to book_path(book), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to positions_path(position: {quantity: 1, book_id: book.id}), { method: :post, remote: true, class: 'thumb-hover-link buy' } do
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title= book.name
          %p.font-16.in-gold-500= book.price_euro
          %span.divider-sm
          %p.lead.small= book.authors_formated