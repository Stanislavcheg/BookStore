%p.in-gold-500.font-18 Order Summary
%table.general-summary-table
  %tr
    %td
      %p.font-16 Subtotal:
    %td
      %p.font-16= number_to_currency(order.subtotal,:unit=>'€')
  - if order.coupon
    %tr
      %td
        %p.font-16 Coupon:
      %td
        %p.font-16= number_to_currency(order.discount,:unit=>'€')
  %tr
    %td
      %strong.font-18 Order Total:
    %td
      %strong.font-18= number_to_currency(order.total,:unit=>'€')