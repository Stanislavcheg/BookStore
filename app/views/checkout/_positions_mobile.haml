- positions.each do |position|
  .general-cart-item.divider-lg
    .general-img-wrap-table
      %img.cart-img-shadow{src: position.book.images.first.try(:url), alt: position.book.name}
    %p.title= position.book.name
    %P.in-grey-600.fw-300= position.book.short_description
    %table.table
      %tr
        %td
          %span.in-grey-600 Price
        %td
          %span.font-16.in-gold-500= number_to_currency(position.unit_price,:unit=>'€')
      %tr
        %td.vertical-middle
          %span.in-grey-600 Quantity
        %td
          %span= position.quantity
      %tr
        %td
          %span.in-grey-600 Total
        %td
          %span.font-16.in-gold-500= number_to_currency(position.total_price,:unit=>'€')
