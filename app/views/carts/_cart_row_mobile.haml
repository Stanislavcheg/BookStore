.general-cart-item.divider-lg-bottom
  %button.close.general-cart-close{type: "button", 'aria-label': "Close", "data-position": "#{position.id}"}
    %span{'aria-hidden': "true"} &times;
  .general-img-wrap-table
    %img.cart-img-shadow{src: book.images.first.try(:url), alt: book.name}
  %p.title
    = link_to book.name, book_path(book)
  %table.table
    %tr
      %td
        %span.in-grey-600 Price
      %td
        %span.font-16.in-gold-500= book.decorate.price_euro
    %tr
      %td.vertical-middle
        %span.in-grey-600 Quantity
      %td
        .input-group
          %a.input-link.neg-quantity
            %i.fa.fa-minus.line-heaght-40
          %input.form-control.quantity-input{type: "text", value: "#{position.quantity}", "data-position": "#{position.id}"}
          %a.input-link.pos-quantity
            %i.fa.fa-plus.line-heaght-40
    %tr
      %td
        %span.in-grey-600 SubTotal
      %td
        %span.font-16.in-gold-500= number_to_currency(position.total_price,:unit=>'â‚¬')
