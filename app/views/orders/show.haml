
%main.container.general-main-wrap
  %h1.general-title-margin Order #{@order.order_number}
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle.mt-0 Shipping Address
      = render 'checkout/complete_address', address: @order.shipping_address
    .col-sm-3
      %h3.general-subtitle.mt-0 Billing Address
      = render 'checkout/complete_address', address: @order.billing_address
    .col-sm-3
      %h3.general-subtitle.mt-0 Shipments
      %p.general-address
        = @order.delivery.method
        %br
        = @order.delivery.days
    .col-sm-3
      %h3.general-subtitle.mt-0 Payment Information
      %p.general-address
        = @order.credit_card.masked_number
        %br
        = @order.credit_card.expires
  .visible-xs
    = render '/checkout/positions_mobile', positions: @order.positions
  .hidden-xs.divider-lg.pt-20
    = render '/checkout/positions_desktop', positions: @order.positions
  .text-center.general-text-right#confirm_order_summary
    = render 'checkout/order_summary', order: @order
  .text-center#confirm_submit
 
