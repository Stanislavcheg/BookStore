- orders.each do |order|
  .general-cart-item.divider-lg-bottom.pt-0
    %table.table
      %tr
        %td.col-half
          %span.in-grey-600 Number
        %td.col-half
          =link_to order.order_number, order_path(order), class: 'general-order-number'
      %tr
        %td
          %span.in-grey-600 Completed at
        %td
          %span.in-grey-900.font-16.fw-300= order.updated_at.strftime("%F")
      %tr
        %td
          %span.in-grey-600 Status
        %td
          %span.font-16.in-grey-900.fw-300=order.order_status
      %tr
        %td
          %span.in-grey-600 Total
        %td
          %strong.font-16= number_to_currency(order.total,:unit=>'â‚¬')
