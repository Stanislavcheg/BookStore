%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "general-form"}) do |f|
    = devise_error_messages!
    .form-group.mb-30.field
      = f.label "Enter email", class: 'control-label input-label'
      = f.email_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: "Enter email"
    .form-group.mb-30.field
      = f.label "Password", class: 'control-label input-label'
      - if @minimum_password_length 
        %em (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'form-control', id: 'password', placeholder: "Password"
    .form-group.mb-30.field
      = f.label "Confirm Password", class: 'control-label input-label'
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'confirm', placeholder: "Confirm Password"
    .text-center.actions
      = f.submit "Sign up", class: 'btn btn-default mb-20'
      %div=render "devise/shared/links"
