%main.container
  %h1.general-title-margin Settings
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} Address
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} Privacy
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      %form
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0 Billing Address
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0 Shipping Address
        .row
          .col-md-5.mb-40
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 Billing Address
            .form-group.has-error
              %label.control-label.input-label{for: "firstName"} First Name
              %input#firstName.form-control{name:"fname", type: "text", placeholder: "First Name"}
              %span.help-block Please enter your first name
            .form-group
              %label.control-label.input-label{for: "lastName"} Last Name
              %input#lastName.form-control{name:"lname", type: "text", placeholder: "Last Name"}
            .form-group
              %label.control-label.input-label{for: "address"} Address
              %input#address.form-control{name: "address", type: "text", placeholder: "Address"}
            .form-group
              %label.control-label.input-label{for: "city"} City
              %input#city.form-control{name: "city", type: "text", placeholder: "City"}
            .form-group
              %label.control-label.input-label{for: "zip"} Zip
              %input#zip.form-control{name: "zip", type: "text", placeholder: "Zip"}
            .form-group
              %label.control-label.input-label{for: "сountry"} Country
              %input#country.form-control{name: "country", type: "text", placeholder: "Select a country"}
            .form-group.mb-60
              %label.control-label.input-label{for: "phone"} Phone
              %input#phone.form-control{name: "phone", type: "tel", placeholder: "Example +355 66 123 4567"}
            .text-center.general-text-align
              %button.btn.disabled Save
          .col-md-5.col-md-offset-1.mb-25
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0 Shipping Address
            .form-group.has-error
              %label.control-label.input-label{for: "firstName"} First Name
              %input#firstName.form-control{name:"fname", type: "text", placeholder: "First Name"}
              %span.help-block Please enter your first name
            .form-group
              %label.control-label.input-label{for: "lastName"} Last Name
              %input#lastName.form-control{name:"lname", type: "text", placeholder: "Last Name"}
            .form-group
              %label.control-label.input-label{for: "address"} Address
              %input#address.form-control{name: "address", type: "text", placeholder: "Address"}
            .form-group
              %label.control-label.input-label{for: "city"} City
              %input#city.form-control{name: "city", type: "text", placeholder: "City"}
            .form-group
              %label.control-label.input-label{for: "zip"} Zip
              %input#zip.form-control{name: "zip", type: "text", placeholder: "Zip"}
            .form-group
              %label.control-label.input-label{for: "сountry"} Country
              %select#country.form-control{name: "country", placeholder: "Select a country"}
                %option London
                %option London
                %option London
            .form-group.mb-55
              %label.control-label.input-label{for: "phone"} Phone
              %input#phone.form-control{name: "phone", type: "tel", placeholder: "Example +355 66 123 4567"}
            .text-center.general-text-align
              %button.btn.disabled Save
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .col-sm-5
          %p.in-gold-500.font-18.mb-25 
            Email
            %div.general-form-md
              .form-group.mb-35.field
                = f.label :email, class: "control-label input-label", value: "Enter Email"
                = f.email_field :email, autofocus: true, class: "form-control", id: "email", placeholder: "Enter your email"
              .general-text-align.actions
                = f.submit "Save", class: "btn disabled mb-35", id: "save-email-btn"
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25 
            Password
            %div.general-form-md.divider-lg-bottom.pb-25
              .form-group.mb-30.field
                = f.label :current_password, class: "control-label input-label", value: "Old Password"
                = f.password_field :current_password, autocomplete: "off", class: "form-control", id: "oldPassword", placeholder: "Old Password"
                %i (we need your current password to confirm your changes)
                %br
              .form-group.mb-30.field
                = f.label :password, class: "control-label input-label", value: "New Password"
                = f.password_field :password, autocomplete: "off", class: "form-control", id: "password", placeholder: "New Password"
                %i (leave blank if you don't want to change it) 
              .form-group.mb-40.field
                = f.label :password_confirmation, class: "control-label input-label", value: "Confirm Password"
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "confirmPassword", placeholder: "Confirm Password"
              .general-text-align.actions
                = f.submit "Save", class: "btn disabled mb-10"
        .col-sm-12
          %p.in-gold-500.font-18.mb-25 Remove Account
          %form
            .general-settings-btn
              = button_to "Please Remove My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn disabled mb-20", id: "remove-acc-button"
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %div.remove-box
                  %div
                    %input.checkbox-input#remove-acc-checkbox{type: "checkbox", hidden: "true"}
                    %span.checkbox-icon
                      %i.fa.fa-check
                  %div
                    %span.checkbox-text I understand that all data will be lost